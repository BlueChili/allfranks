@import 'partials/reset'
@import 'partials/base-text'


// Color definitions
blue_primary = rgb(22, 79, 139)
blue_secondary = rgb(1, 110, 220)
red_primary = #f40000
yellow = rgb(247, 244, 11)

// Viewport definitions
contact_desktop = 724px
ipad_portrait = 767px
ipad_landscape = 1023px
ipad_pro_10 = 1111px
ipad_pro_12 = 1365px
macbook = 1439px
fullHD = 1919px

.hr
  width 100vw
  background url('/img/chalet.jpg') center center
  background-size cover
  display flex
  justify-content center
  padding 12em 0

.hr-body
  background rgba(255, 255, 255, 0.6)
  max-width 20em
  padding 6em 2em
  p
    color #222
    font-size 1.4em
    font-weight 400
    text-align center
    text-transform uppercase

.hr-logo
  flex-shrink 1
  max-width 428px
  margin-right 4em
  object-fit contain

.advantage
  padding 4em 0

.advantage-title
  color red_primary
  background white
  width 100%
  text-align center
  font-weight 700
  text-transform uppercase
  margin-bottom 1em
  font-size 3.8em

.advantage-banners
  display flex
  align-items flex-start
  max-width 960px
  margin 0 auto

.advantage-banner, .advantage-banner__main
  background red_primary
  padding 2em 1px 40px
  margin 0 2em

.advantage-banner
  width 14em
  flex-grow 0
  position relative
  box-sizing border-box
  &::before
    content ''
    height 0px
    width 0px
    position absolute
    bottom 0
    left 0
    border-right 7em solid transparent
    border-bottom 28px solid white
  &::after
    content ''
    height 0px
    width 0px
    position absolute
    bottom 0
    right 0
    border-left 7em solid transparent
    border-bottom 28px solid white
  .advantage-bannerText 
    height 100px
    font-size 2em

.advantage-banner__main
  width 25em
  padding-bottom 60px
  position relative
  &::before
    content ''
    height 0px
    width 0px
    position absolute
    bottom 0
    left 0
    border-right 12.5em solid transparent
    border-bottom 40px solid white
  &::after
    content ''
    height 0px
    width 0px
    position absolute
    bottom 0
    right 0
    border-left 12.5em solid transparent
    border-bottom 40px solid white

.advantage-banner__main
  .advantage-bannerText
    font-size 2.8em

.advantage-bannerText
  color red_primary
  background white
  font-size 2em
  text-transform uppercase
  text-align center
  line-height 1.2em
  padding-left 0.7em
  padding-right 0.7em

.hpsv
  padding 7em 0 3em
  background red_primary
  color white
  
.hpsv-title
  width 100%
  text-align center
  font-weight 600
  margin-bottom 0.8em

.hpsc // home page service component
  max-width 960px
  margin 0 auto 4em
  display flex

.hpsc-image
  flex-basis 50%
  flex-shrink 1
  margin 0
  padding 0 0 0 4em
  img
    width 100%
    height auto

.hpsc-copy
  flex-basis 50%
  flex-shrink 0
  h2
    font-size 1.5em
    font-weight 500
    padding 0
    margin 0 0 1em 0
  p
    padding 0
    margin 0 0 1em 0
    font-size 1.1em
  
.hpmt
  display flex
  flex-direction column
  align-content center
  max-width 960px
  margin 0 auto
  padding 4em 0
  p
    font-size 3.4em
    font-weight 700
    text-transform uppercase
    line-height 1.3em
    text-align center
    margin 0 0 0.3em
  img
    width 400px
    height auto
    margin 0 auto 1em
.ct
  background blue_secondary
  padding 1em
  font-size 28px
  @media all and (min-width: ipad_portrait)
    padding 3em 0
    position relative
    &:hover .ct-contactLink
      visibility visible
      animation fade-in-bottom ease 0.4s forwards

.ct-title, .ct-address, .cd-address__firstLine, .ct-phones, .ct-phone, .ct-mail, .ct-contactLink, .ct-mailTitle, .ct-copy
  font-size 1em
  color white
  text-align center
  font-weight 200

.ct-title
  margin-bottom 1em

.ct-copy
  font-size 0.8em
  margin-bottom 1em
  padding 0
  font-weight 300

.ct-contactLink
  opacity 0
  position absolute
  bottom 0.5em
  right calc(50% - 0.5em)
  visibility hidden
  text-decoration none
  background transparent

.ct-address
  margin 0 0 1em
  padding 0
  line-height 1.2em
  color white
  font-size 0.8em
  abbr
    font-size 1em
    font-weight 200

.ct-phone
  display block
  text-decoration none
  text-align center
  color white
  line-height 1.2em
  font-weight 300

.ct-phones
  margin-bottom 2em

.ct-mail
  display block
  margin-bottom 0.7em
  text-align center
  text-decoration none
  margin-bottom 1.5em
  line-height 1.5em

.ft         // Footer
  background red_primary
  color white
  display flex
  flex-direction column
  padding 1em 0
  font-size 16px

.ft-title
  font-size 1em
  font-weight 200
  text-align center
  margin-bottom 8px

.ft-contacts
  padding 0
  text-align center
  font-size 16px
  .ft-phone, .ft-mail
    color white
    text-decoration none
    font-size 1em
    font-weight 200

.ft-address
  font-size 1em
  font-weight 200
  text-align center

.sv-service
  padding 3em 0
.sv-header
  padding 2.5em 0
  display flex
  margin 0 auto
  align-items center
  justify-content center
  border-bottom 1px solid red_primary

.sv-headerLogo
  width 280px
  height auto
  object-fit contain
  padding-right 3em

.sv-headerTitle
  text-transform uppercase
  font-weight 700
  color blue_secondary

.sv-redBorder
  border-bottom 1px solid red_primary

.sv-blueBorder
  border-bottom 1px solid blue_secondary

.sv-serviceContent
  max-width 960px
  margin 0 auto
  display flex

.sv-serviceCopy
  flex-basis 50%
  flex-grow 1
  h1
    font-size 2em
    font-weight 500
    padding-bottom 0.9em
  p
    padding 0 0 1em
    font-size 1.3em
  ul
    list-style disc inside
    li
      font-size 1.2em
      line-height 1.5em

.sv-serviceImage
  flex-basis 50%
  img
    padding 0 2em
    width 100%
    height auto
    object-fit contain
    box-sizing border-box

.sv-schedule
  padding 4em 0
  text-align center
  h1
    font-size 2em
    font-weight 500
    margin-bottom 0.8em
  p
    font-size 1.2em
    padding-top 0
    padding-bottom 0.4em

@keyframes fade-in-top
  from
    opacity 0
    transform translateY(-15px)
  to
    opacity 1
    transform translateY(0)

@keyframes fade-in-bottom
  from
    opacity 0
    transform translateY(15px)
  to
    opacity 1
    transform translateY(0)

@keyframes fade-in-left
  from
    opacity 0
    transform translateX(-50px)
  to
    opacity 1
    transform translateX(0)

@import 'partials/navigation'
@import 'partials/contact'
