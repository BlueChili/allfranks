@import 'partials/base-text'


// Color definitions

green_primary = #a3c81c
green_secondary = #668200
blue_primary = rgb(22, 79, 139)
blue_secondary = rgb(1, 110, 220)
purple_primary = #631a8b
purple_secondary = #3c045b
red_primary = #D40221
red_secondary = #A4021E
yellow = rgb(247, 244, 11)
contact_column_layout = 724px


