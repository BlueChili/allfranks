body
  color #333
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif

.nv
  display flex
  justify-content space-between
  border-bottom 1px solid #666
  @media all and (min-width: 500px)
    justify-content flex-start
  @supports (backdrop-filter: blur(3px))
    box-shadow 0 0 4px 1px rgb(22, 79, 139)
    backdrop-filter grayscale(20%) blur(3px)
    background rgba(255,255,255,0.4)
    position sticky
    top 0
    z-index 1

.nv-item
  font-weight 600
  color #333
  text-decoration none
  padding 1em 0.5em
  opacity 0
  animation fade-in-top ease 0.4s forwards
  @media all and (min-width: 500px)
    padding 1em

.in //Intro component
  background url('/img/hero.jpg') center top
  filter grayscale(50%)
  padding 1em 0
  height 100vw
  display flex
  flex-direction column
  justify-content center
  opacity 0
  animation fade-in-bottom ease 0.4s forwards
  animation-delay 0.4s

.in-title
  font-size 2em
  margin 0 auto 0
  padding 0.5em 0.2em
  text-align center
  background rgba(255, 255, 255, 0.5)
  border 1px solid blue_primary
  width 90%
  @supports (backdrop-filter: blur(3px))
    background rgba(255, 255, 255, 0.3)
    backdrop-filter blur(2px)
  img
    object-fit contain
    width 100%

.in-moto
  padding 1em 1em
  font-size 1.1em
  font-weight 400
  background rgba(255, 255, 255, 0.7)
  max-width 80%
  width 80%
  margin 20px auto 0
  @supports (backdrop-filter: blur(3px))
    background rgba(255, 255, 255, 0.7)
    backdrop-filter blur(2px)

.cd
  width 80%
  padding 0.5em 
  margin 1em auto 1em
  border 1px solid blue_primary
  opacity 0
  animation fade-in-bottom ease 0.6s forwards
  animation-delay 0.6s
  p
    margin 0
    padding 0 0 0.4em

img[src='/img/boiler-room.jpg']
  width 100%
  transform translateX(-100%)
  transform-origin left
  animation grow-left cubic-bezier(0.785, 0.135, 0.15, 0.86) 0.6s forwards
  animation-delay 0.6s

@keyframes fade-in-top
  from
    opacity 0
    transform translateY(-15px)
  to
    opacity 1
    transform translateY(0)

@keyframes fade-in-bottom
  from
    opacity 0
    transform translateY(15px)
  to
    opacity 1
    transform translateY(0)

@keyframes grow-left
  from
    transform translateX(-100%)
  to
    transform translateX(0)

