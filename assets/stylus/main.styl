body
  color #333
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif

.nv
  display flex
  justify-content space-between
  border-bottom 1px solid #666
  @media all and (min-width: 500px)
    justify-content flex-start
  @supports (backdrop-filter: blur(3px))
    box-shadow 0 0 4px 1px rgb(22, 79, 139)
    backdrop-filter grayscale(20%) blur(3px)
    background rgba(255,255,255,0.4)
    position sticky
    top 0
    z-index 1

.nv-item
  font-weight 600
  color #333
  text-decoration none
  padding 1em 0.5em
  opacity 0
  animation fade-in-top ease 0.4s forwards
  @media all and (min-width: 500px)
    padding 1em

.in //Intro component
  background url('/img/hero.jpg') center top
  filter grayscale(50%)
  padding 1em 0
  height 100vw
  display flex
  flex-direction column
  justify-content center
  opacity 0
  animation fade-in-bottom ease 0.4s forwards
  animation-delay 0.4s

.in-title
  font-size 2em
  margin 0 auto 0
  padding 0.5em 0.2em
  text-align center
  background rgba(255, 255, 255, 0.5)
  border 1px solid blue_primary
  width 90%
  @supports (backdrop-filter: blur(3px))
    background rgba(255, 255, 255, 0.3)
    backdrop-filter blur(2px)
  img
    object-fit contain
    width 100%

.in-moto
  padding 1em 1em
  font-size 1.1em
  font-weight 400
  background rgba(255, 255, 255, 0.7)
  max-width 80%
  width 80%
  margin 20px auto 0
  @supports (backdrop-filter: blur(3px))
    background rgba(255, 255, 255, 0.7)
    backdrop-filter blur(2px)

.cd
  width 80%
  padding 0.5em 
  margin 1em auto 1em
  border 1px solid blue_primary
  opacity 0
  animation fade-in-bottom ease 0.6s forwards
  animation-delay 0.6s
  p
    margin 0
    padding 0 0 0.4em

img[src='/img/boiler-room.jpg']
  width 100%
  opacity 0
  transform translateX(-100%)
  transform-origin left
  animation grow-left ease-out 0.8s forwards
  animation-delay 0.6s

.contact-container
  border 1px solid blue_secondary
  border-radius 2px
  display flex
  max-width 1400px
  margin 0 auto
  flex-direction column
  @media all and (min-width: contact_column_layout)
    flex-direction row

// .mp
//   margin 0 auto
a[href="#map"], a[href="#ci"]
  margin 0 auto
  text-decoration none
  font-weight 500
  padding 1em
  color blue_secondary
  margin-top 0.5em
  @media all and (min-width: contact_column_layout)
    display none
    opacity 0
    width 0
    visibility hidden
.ci
  flex-direction column
  background blue_secondary
  padding 1em
  display flex

.ci-details
  flex-grow 1
  flex-basis 50%
  color white
  margin-bottom 1em

.ci-details__address
  font-size 1em
  line-height 1.5em 
  margin-bottom 0.3em

.ci-details__phones
  display flex
  justify-content space-around
  margin-bottom 0.8em
  a
    color #fff

.ci-details__mailLink
  display block
  color #fff
  text-align center

.cf
  display flex
  flex-direction column
  justify-content center
  label
    margin-bottom 0.5em
    font-weight 400
    color white
    margin-left 1em
  input[type='submit']
    border 0px
    width 5em
    margin-left auto
    padding 0.3em
    background white
    font-size 1em
    color blue_secondary
  textarea
    margin-bottom 1em
    font-size 1em
    height 3em

.cf-textbox
  box-sizing border-box
  margin-top 0.2em
  margin-bottom 1.3em
  padding 0.3em 0.5em
  font-size 1em
  

@keyframes fade-in-top
  from
    opacity 0
    transform translateY(-15px)
  to
    opacity 1
    transform translateY(0)

@keyframes fade-in-bottom
  from
    opacity 0
    transform translateY(15px)
  to
    opacity 1
    transform translateY(0)

@keyframes grow-left
  from
    opacity 0
    transform translateX(-20%)
  to
    opacity 1
    transform translateX(0)

